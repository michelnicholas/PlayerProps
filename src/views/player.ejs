<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NBA Players</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 text-center">
    <div class="container mx-auto mt-5">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-5">
        NBA Players
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% players.forEach(player => { %>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <img
            src="<%= player.image %>"
            alt="<%= player.name %>"
            class="w-24 h-24 mx-auto rounded-full mb-6"
          />
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">
            <a
              href="/players/<%= player.name %>"
              class="text-blue-500 hover:underline"
              ><%= player.name %></a
            >
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            Team: <%= player.team %>
          </p>
          <p class="text-gray-700 dark:text-gray-300">
            Points per Game: <%= player.points %>
          </p>
        </div>
        <% }) %>
      </div>
      <a
        href="/"
        class="mt-3 inline-block bg-blue-500 dark:bg-blue-700 text-white py-2 px-4 rounded"
        >Back to Home</a
      >
    </div>
  </body>
</html>
